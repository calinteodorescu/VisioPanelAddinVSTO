<Messages Namespace="VisioWixExtension" Resources="Data.Messages" xmlns="http://schemas.microsoft.com/genmsgs/2004/07/messages">
    <Class Name="VisioErrors" ContainerName="VisioErrorEventArgs" BaseContainerName="WixErrorEventArgs">
      
      <Message Id="InternalError" Number="6500">
        <Instance>
          Internal error in Visio extension: {0}. Please contact developer.
          <Parameter Type="System.String" Name="value" />
        </Instance>
      </Message>
      
      <Message Id="InvalidVisioEdition" Number="6501">
        <Instance>
          Invalid Visio edition specified: "{0}". The Visio Edition (platform) can be either "x86", "x64" or "all"
          <Parameter Type="System.String" Name="value" />
        </Instance>
      </Message>

      <Message Id="InvalidLanguage" Number="6502">
        <Instance>
          Invalid language specifid: "{0}". The language should be either LCID, such as "1033" or language code, such as "en-us".
          <Parameter Type="System.String" Name="value" />
        </Instance>
      </Message>

      <Message Id="InvalidQuickShapesCount" Number="6503">
        <Instance>
          Invalid number of quick shapes specifid: "{0}". The number of quick shapes should be non-negative integer.
          <Parameter Type="System.String" Name="value" />
        </Instance>
      </Message>

      <Message Id="InvalidFileExtension" Number="6504">
        <Instance>
          Invalid file extension for Visio publishing: "{0}". 
          The parent file element is expected to be a Visio stencil file (".vss", ".vsx", ".vssx", ".vssm") or a Visio template file (".vst", ".vtx", ".vstx", ".vstm").
          <Parameter Type="System.String" Name="value" />
        </Instance>
      </Message>
      
    </Class>
</Messages>
