            xmlns:xse="http://schemas.microsoft.com/wix/2005/XmlSchemaExtension"
      targetNamespace="http://schemas.microsoft.com/wix/Visio"
                xmlns="http://schemas.microsoft.com/wix/Visio">
  <xs:annotation>
    <xs:documentation>
      Write copyright here (c)
    </xs:documentation>
  </xs:annotation>

  <xs:import namespace="http://schemas.microsoft.com/wix/2006/wi" />

  <xs:element name="Publish">
    <xs:annotation>
      <xs:appinfo>
        <xse:parent namespace="http://schemas.microsoft.com/wix/2006/wi" ref="File" />
      </xs:appinfo>
      <xs:documentation>
        Registers a stencil/template file for Microsoft Visio. The file to register should be the only file in the component.
      </xs:documentation>
    </xs:annotation>

    <xs:complexType>
      <xs:attribute name="Visio2003" type="wix:YesNoType">
        <xs:annotation>
          <xs:documentation>
            Install for Visio 2003 and below (by default - no)
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>

      <xs:attribute name="Visio2007" type="wix:YesNoType">
        <xs:annotation>
          <xs:documentation>
            Install for Visio 2007 (by default is true if file format is supported)
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>

      <xs:attribute name="Visio2010" type="wix:YesNoType">
        <xs:annotation>
          <xs:documentation>
            Install for Visio 2010 (by default is true if file format is supported)
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>

      <xs:attribute name="Visio2013" type="wix:YesNoType">
        <xs:annotation>
          <xs:documentation>
            Install for Visio 2013 (by default is true if file format is supported)
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>

      <xs:attribute name="VisioEdition" type="VisioEditionType">
        <xs:annotation>
          <xs:documentation>
            Specifies Visio Edition the item should be registered with (x32/x64/All)
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>
      
      <xs:attribute name="Language" type="VisioLanguageType">
        <xs:annotation>
          <xs:documentation>
            Specifies language the item should be registered with.
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>

      <xs:attribute name="MenuPath" type="xs:string">
        <xs:annotation>
          <xs:documentation>
            Specifies the path 
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>

      <xs:attribute name="AltNames" type="xs:string">
        <xs:annotation>
          <xs:documentation>
            Specifies alternate names
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>

      <xs:attribute name="QuickShapeCount" type="xs:integer">
        <xs:annotation>
          <xs:documentation>
            Specifies number of quick shapes.
          </xs:documentation>
        </xs:annotation>
      </xs:attribute>
      

    </xs:complexType>

  </xs:element>

  <xs:simpleType name="VisioEditionType">
    <xs:annotation>
      <xs:documentation>Values of this type could be "All" (default), "x32", "x64"</xs:documentation>
    </xs:annotation>
    <xs:restriction base='xs:NMTOKEN'>
      <xs:enumeration value="All"/>
      <xs:enumeration value="32bit"/>
      <xs:enumeration value="64bit"/>
    </xs:restriction>
  </xs:simpleType>

